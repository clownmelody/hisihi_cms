<html>
 <head> 
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
  <meta name="description" content="嘿设汇" /> 
  <meta name="author" content="嘿设汇 - www.hisihi.com" />
  <meta name="keywords" content="嘿设汇 设计 APP" /> 
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" /> 
  <title>嘿设汇</title> 
  <link rel="stylesheet" href="../bin/css/style.css" /> 
  <link rel="shortcut icon" href="../img/web-favicon.ico" type="image/x-icon" /> 
  <style>.content-app-desktop {
    width:400px;
    height:600px;
    margin:0 auto;
    position: relative;
}
#desktop-qrcode {
    position: absolute;
    right: -172px;
    width: 102px;
    height: 136px;
    top: 20px;
    padding: 26px;
    border: 1px solid #d9dadc;
    background-color: #fff;
}
.qrcode-text {
    position: absolute;
    bottom: 10px;
    text-align: center;
    color: #717375;
    font-size: 14px;
    line-height: 20px;
    left: 32px;
}
iframe.desktop-iframe {
    width:400px;
    height:600px;
    border:none;
}</style> 
 </head> 
 <body> 
  <div class="content-app-desktop"> 
   <div id="desktop-qrcode"></div> 
   <iframe src="../apps/index.htm" class="desktop-iframe"></iframe> 
  </div> 
  <script src="../lib/jquery.min.js"></script> 
  <script src="../lib/jquery.qrcode.js"></script> 
  <script src="../lib/qrcode.js"></script> 
  <script>
$(function(){
    $('body').css('background-color','#e7e8eb');
    //- 二维码生成
	var qrcodeInText = "http://" + window.location.host + window.location.pathname.replace('appDesktop', 'apps');
    $('#desktop-qrcode').qrcode({
        width: '102',
        height: '102',
        text: qrcodeInText
    });
    var qrcodeText = '<div class="qrcode-text"><p>微信扫一扫</p><p>即可在手机预览</p></div>';
    $('#desktop-qrcode').append(qrcodeText);
    function initWidthHeight(){
        var WIDTH = $(window).width();
        var HEIGHT = $(window).height();
        WIDTH = HEIGHT * 2 / 3;
        $('.content-app-desktop').css('width', WIDTH + 'px');
        $('.content-app-desktop').css('height', HEIGHT + 'px');
        $('.desktop-iframe').css('width', WIDTH + 'px');
        $('.desktop-iframe').css('height', HEIGHT + 'px');
    }
    initWidthHeight();
    $(window).resize(function(){
        window.location.reload();
        initWidthHeight();
    });
})
</script>  
 </body>
</html>